{
  "manifest_version": 3,
  "name": "Snap ask AI",
  "version": "1.0",
  "description": "Chụp ảnh màn hình hỏi AI không cần chuyển tab",

  "permissions": ["activeTab", "scripting", "tabs"],
  "host_permissions": ["<all_urls>"],

  "action": {
    "default_popup": "public/popup.html",
    "default_title": "SnapAsk"
  },

  "background": {
    "service_worker": "dist/background.js",
    "type": "module"
  },

  "commands": {
    "capture-and-ask": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y"
      },
      "description": "Chụp ảnh màn hình hỏi AI không cần chuyển tab"
    }
  }
}
